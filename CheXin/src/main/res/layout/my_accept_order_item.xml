<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/RGB255_255_255"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/origplace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="上海"
                    android:textSize="@dimen/y30" />

                <ImageView
                    android:id="@+id/ddjd"
                    android:layout_width="@dimen/x64"
                    android:layout_height="@dimen/y14"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@id/origplace"
                    android:background="@drawable/arrow1" />

                <TextView
                    android:id="@+id/tv_toplace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_toRightOf="@id/ddjd"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="北京"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <TextView
                android:gravity="center"
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:text="2016-02-01"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <View style="@style/view_width_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_car_type"
                style="@style/text_car_style"
                android:text="箱式货车"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_car_long"
                style="@style/text_car_style"
                android:text="9.5米"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_car_weight"
                style="@style/text_car_style"
                android:text="12吨"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_mileage"
                style="@style/text_car_style"
                android:text="里程约25公里" />

        </LinearLayout>

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x40"
            android:text="申请状态：等待对方确认" />

        <RelativeLayout
            android:id="@+id/RlBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y80"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_blue"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y50"
                    android:background="@drawable/btn_blue_gradient"
                    android:text="接货意向"
                    android:textColor="@color/RGB255_255_255"
                    android:textSize="@dimen/y30" />

                <Button
                    android:id="@+id/btn_red"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/btn_red_gradient"
                    android:text="关闭货源"
                    android:textColor="@color/RGB255_255_255"
                    android:textSize="@dimen/y30" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
