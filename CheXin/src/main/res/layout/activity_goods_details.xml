<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RGB248_248_248"
    android:orientation="vertical"
    tools:context=".activity.goodsowner.GoodsDetailsActivity">

    <include layout="@layout/toolbar_item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/layout_info_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y220"
                android:layout_marginTop="@dimen/y20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y20"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/y200"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/y15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y130"
                    android:paddingTop="@dimen/y15">

                    <TextView
                        android:id="@+id/txt_origin"
                        style="@style/style_textview_black"
                        android:text="始发地："
                        android:textSize="@dimen/y36" />

                    <TextView
                        android:id="@+id/txt_destination"
                        style="@style/style_textview_black"
                        android:layout_below="@+id/txt_origin"
                        android:layout_marginTop="@dimen/y15"
                        android:text="目的地："
                        android:textSize="@dimen/y36" />

                    <TextView
                        android:id="@+id/tv_from_place"
                        style="@style/style_textview_black"
                        android:layout_alignTop="@+id/txt_origin"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/txt_origin"
                        android:text="上海市,嘉定区"
                        android:textSize="@dimen/y36" />

                    <TextView
                        android:id="@+id/tv_to_place"
                        style="@style/style_textview_black"
                        android:layout_alignTop="@+id/txt_destination"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/txt_destination"
                        android:text="江苏省,镇江市"
                        android:textSize="@dimen/y36" />

                    <TextView
                        android:id="@+id/tv_mileage"
                        style="@style/style_textview_black"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/txt_origin"
                        android:text="里程约25公里" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/style_textview_black"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/txt_destination"
                        android:text="2016-03-04  09:54" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="@dimen/y20"
                    android:background="#999999" />

                <include layout="@layout/layout_table_goods" />

                <LinearLayout
                    android:id="@+id/layout_action"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_request_get_order"
                        android:layout_width="@dimen/x450"
                        android:layout_height="@dimen/y70"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y100"
                        android:background="@drawable/btn_shenqingdingdan"
                        android:text="申请接单"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_calling"
                        android:layout_width="@dimen/x450"
                        android:layout_height="@dimen/y70"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y30"
                        android:background="@drawable/btn_bodadianhua"
                        android:text="拨打电话"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
