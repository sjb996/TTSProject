<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y5">
    <!--tools:showIn="@layout/activity_goods_details"-->
    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="车牌号码：" />

        <TextView
            android:id="@+id/tv_car_number"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="车辆类型：" />

        <TextView
            android:id="@+id/tv_car_type"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="车辆长度：" />

        <TextView
            android:id="@+id/tv_car_long"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="车辆宽度：" />

        <TextView
            android:id="@+id/tv_car_width"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="车辆载重：" />

        <TextView
            android:id="@+id/tv_car_weight"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>


    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="联系电话：" />

        <TextView
            android:id="@+id/tv_phone_number"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="详细地址：" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

    <TableRow style="@style/style_tablerow">

        <TextView
            style="@style/style_tablerow_textview"
            android:layout_weight="1.7"
            android:text="备注信息：" />

        <TextView
            android:id="@+id/tv_notes"
            style="@style/style_tablerow_textview"
            android:layout_weight="5" />
    </TableRow>

</TableLayout>