<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RGB240_240_240">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginBottom="@dimen/y20"
        android:background="@color/RGB255_255_255"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_route_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="路线一"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/tv_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="上海 浦东——江苏 南京"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <Button
                    android:id="@+id/btn_blue"
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y44"
                    android:background="@color/colorPrimary"
                    android:text="修改"
                    android:textColor="@color/RGB255_255_255" />

                <Button
                    android:id="@+id/btn_red"
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y44"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@color/RGB239_68_29"
                    android:text="删除"
                    android:textColor="@color/RGB255_255_255" />

                <RadioButton
                    android:id="@+id/is_lister"
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y44"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@drawable/listen_button"
                    android:button="@null"
                    android:textColor="@color/RGB255_255_255" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

