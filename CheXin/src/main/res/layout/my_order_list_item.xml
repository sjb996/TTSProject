<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/RGB255_255_255"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110">

            <tts.moudle.api.widget.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@id/img"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="老吴"
                        android:textSize="@dimen/y30" />

                    <ImageView
                        android:layout_width="@dimen/x64"
                        android:layout_height="@dimen/y14"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_toRightOf="@id/name"
                        android:background="@drawable/star5" />

                    <!--<TextView-->
                    <!--android:id="@+id/time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="@dimen/x20"-->
                    <!--android:text="2016-02-01"-->
                    <!--android:textSize="@dimen/y30" />-->


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_toLeftOf="@+id/carState"
                        android:text="车辆状态"
                        android:textSize="@dimen/y30" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_from_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海"
                        android:textSize="@dimen/y30" />

                    <ImageView
                        android:layout_width="@dimen/x64"
                        android:layout_height="@dimen/y14"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/arrow1" />

                    <TextView
                        android:id="@+id/tv_to_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="北京"
                        android:textSize="@dimen/y30" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/view_width_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_car_type"
                style="@style/text_car_style"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_car_long"
                style="@style/text_car_style"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_car_weight"
                style="@style/text_car_style"
                android:textColor="@color/colorPrimary" />

            <View
                style="@style/view_height_style"
                android:layout_marginBottom="@dimen/y5"
                android:layout_marginTop="@dimen/y5" />

            <TextView
                android:id="@+id/tv_mileage"
                style="@style/text_car_style" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_action"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y50"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_blue_gradient"
            android:text="交易完成"
            android:textColor="@color/RGB255_255_255"
            android:textSize="@dimen/y30" />
    </LinearLayout>
</LinearLayout>
