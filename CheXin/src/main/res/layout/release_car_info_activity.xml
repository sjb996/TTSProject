<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RGB240_240_240"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="始发地:"
                android:textSize="@dimen/y30" />

            <RelativeLayout
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y64"
                android:background="@drawable/kuang">

                <EditText
                    android:editable="false"
                    android:id="@+id/edit_from"
                    style="@style/text_common_style" />

                <Button
                    android:id="@+id/btn_from"
                    android:layout_width="@dimen/x64"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/xia2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="目的地:"
                android:textSize="@dimen/y30" />

            <RelativeLayout
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y64"
                android:background="@drawable/kuang">

                <EditText
                    android:editable="false"
                    android:id="@+id/edit_to"
                    style="@style/text_common_style" />

                <Button

                    android:id="@+id/btn_to"
                    android:layout_width="@dimen/x64"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/xia2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="车牌号码:"
                android:textSize="@dimen/y30" />

            <RelativeLayout
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y64"
                android:background="@drawable/kuang">

                <EditText
                    android:id="@+id/edit_car_number"
                    style="@style/text_common_style" />

                <Button
                    android:id="@+id/btn_car_code"
                    android:layout_width="@dimen/x64"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/xia2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="车辆类型:"
                android:textSize="@dimen/y30" />

            <RelativeLayout
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y64"
                android:background="@drawable/kuang">

                <EditText
                    android:id="@+id/edit_car_type"
                    style="@style/text_common_style"
                    android:editable="false" />

                <!--<Button-->
                <!--android:id="@+id/btn_car_type"-->
                <!--android:layout_width="@dimen/x64"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:background="@drawable/xia2" />-->
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="车长:"
                android:textSize="@dimen/y30" />

            <EditText

                android:id="@+id/edit_car_long"
                style="@style/text_common_style"
                android:editable="false" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="车宽:"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/edit_car_width"
                style="@style/text_common_style"
                android:editable="false">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="车载重量:"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/tv_car_weight"
                style="@style/text_common_style"
                android:editable="false">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="联系方式:"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/edit_phone_number"
                style="@style/text_common_style"
                android:hint="请输入电话号码"
                android:inputType="phone">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="备注信息:"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/edit_note"
                style="@style/text_common_style"
                android:hint="25字以内">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/x130"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:text="有效期:"
                android:textSize="@dimen/y30" />

            <RelativeLayout
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/y64"
                android:background="@drawable/kuang">

                <EditText
                    android:editable="false"
                    android:id="@+id/edit_validity"
                    style="@style/text_common_style" />

                <Button
                    android:id="@+id/btn_validity"
                    android:layout_width="@dimen/x64"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/xia2" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@color/colorPrimary"
        android:text="发布车源"
        android:textColor="@color/RGB255_255_255"
        android:textSize="@dimen/y30" />

</RelativeLayout>
