<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RGB238_238_238"
    android:orientation="vertical"
    tools:context="tts.project.handi.activity.RecommendActivity">

    <include layout="@layout/toolbar_item" />

    <LinearLayout
        android:padding="32dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="填写推荐人的手机号"
            android:textColor="@color/themeFontsColor"
            android:textSize="@dimen/y30" />

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:id="@+id/number_input"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="48dp"-->
            <!--android:layout_marginRight="48dp">-->

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="phone"
                android:hint="输入手机号" />
        <!--</android.support.design.widget.TextInputLayout>-->

        <Button
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_order_button"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/y30" />
    </LinearLayout>
</LinearLayout>
