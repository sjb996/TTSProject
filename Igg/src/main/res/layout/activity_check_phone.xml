<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context=".activity.CheckPhoneActivity">

    <include layout="@layout/toolbar_item" />

    <EditText
        android:inputType="phone"
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入您的手机号"
        android:paddingLeft="@dimen/x30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y20">

        <EditText
            android:inputType="textVisiblePassword"
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/x30" />

        <TextView
            android:id="@+id/VerBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x35"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="#ffa375" />
    </RelativeLayout>

    <Button
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y90"
        android:background="@drawable/shape_check_phone_button"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>
