<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y200"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_horizontal_margin"
        android:paddingRight="@dimen/view_horizontal_margin"
        android:paddingTop="@dimen/view_vertical_margin">

        <TextView

            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#646464"
            android:textSize="@dimen/y26" />

        <TextView
            android:id="@+id/tv_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:textColor="#909090"
            android:textSize="@dimen/y22" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sales"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:text="$13"
            android:textColor="#323232"
            android:textSize="@dimen/y24" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_sales"
            android:layout_marginTop="@dimen/view_horizontal_margin"
            android:drawableLeft="@mipmap/biaoqian_2x"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="积分抵现" />

        <View
            style="@style/view_width_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="@dimen/y150"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />
</LinearLayout>