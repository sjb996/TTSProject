<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="tts.project.igg.activity.login.InputInviteActivity">

    <include layout="@layout/toolbar_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/y160">

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_regeister_edittext"
            android:hint="填写邀请人的手机号"
            android:paddingLeft="@dimen/x80"
            android:textColorHint="@color/white" />
    </RelativeLayout>

    <Button
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/y60"
        android:background="@drawable/shape_regeister_button"
        android:text="下一步"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/y30" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y50"
        android:gravity="center"
        android:text="填写邀请人的手机号码，如果没有邀请人，请直接点击下一步"
        android:textColor="#e6ebf1" />
</LinearLayout>
