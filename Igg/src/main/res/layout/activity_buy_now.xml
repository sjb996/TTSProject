<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:minHeight="@dimen/y900"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/y230">

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y600">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食品口味" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/tags_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y400"
                    android:layout_marginTop="@dimen/y20"
                    app:flexDirection="row"
                    app:flexWrap="wrap"></com.google.android.flexbox.FlexboxLayout>

                <View style="@style/view_width_style" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y70"></RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:background="@color/assist_color"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>