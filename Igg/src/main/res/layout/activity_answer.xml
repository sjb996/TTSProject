<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tts.project.igg.activity.AnswerActivity">

    <include layout="@layout/toolbar_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <tts.moudle.api.widget.RecyclerViewAutoRefreshUpgraded
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginRight="@dimen/x100"
            android:background="@drawable/shape_order_button"
            android:text="提交"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
